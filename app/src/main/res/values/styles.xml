<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="toolBarStyle">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/toolbar_sp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="date_picker_style" parent="Theme.Material3.DayNight.Dialog">

        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/text_button</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/text_button</item>
    </style>

    <style name="text_button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>



    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="titre2">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="fontFamily">@string/material_motion_easing_emphasized</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tv_basics">
        <item name="android:textSize">@dimen/tv_usual</item>
    </style>

    <style name="tv_detail" parent="tv_basics">
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
    </style>

    <style name="detail_icon">
        <item name="android:paddingStart">10dp</item>

    </style>

    <style name="field_add_property" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_marginTop">12dp</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="boxBackgroundColor">@color/colorSecondaryLight</item>
        <item name="hintTextAppearance">@style/hint_appearance</item>
    </style>

    <style name="hint_appearance">
        <item name="android:textSize">@dimen/tv_usual</item>


    </style>

    <style name="checkbox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="color">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:buttonTint">@color/colorPrimaryDark</item>
    </style>

    <style name="hint_form">
        <item name="android:textColor">@color/colorSecondaryDark</item>
        <item name="android:textSize">22sp</item>
    </style>


    <style name="icon_proximity">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:height">50px</item>
    </style>

    <style name="filter_button">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorSecondaryDark</item>
    </style>

    <style name="filter_button_active" parent="filter_button">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
    </style>


</resources>
